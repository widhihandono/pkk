<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Edit.Catatan_Keluarga_Edit_Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/header_layout"
        android:orientation="vertical"
        android:id="@+id/lnHeader"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/ic_arrow_back"
                android:id="@+id/tvBackEditCatKeluargaEdit"
                android:background="@drawable/button_click"
                android:layout_marginRight="10dp"
                android:padding="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center"
                android:textColor="#fff"
                android:textStyle="bold"
                android:textSize="20dp"
                android:text="Edit Catatan Keluarga"
                android:gravity="center"/>

        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Catatan Keluarga Edit"
        android:textStyle="bold"
        android:textSize="18dp"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:textColor="#000"
        android:layout_below="@id/lnHeader"
        android:id="@+id/text"
        android:layout_marginLeft="20dp"/>


    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rvCatatanKeluarga"
        android:layout_below="@id/text"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">

    </androidx.recyclerview.widget.RecyclerView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:id="@+id/tvBack"
        android:gravity="center"
        android:drawableRight="@drawable/ic_back_white"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_centerVertical="true"
        android:background="@drawable/btn_blue"
        android:textStyle="bold"
        android:textColor="#fff"
        android:layout_alignParentLeft="true"
        android:textSize="18dp"
        android:layout_marginLeft="15dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:text="Next"
        android:id="@+id/tvNext"
        android:gravity="center"
        android:drawableRight="@drawable/ic_next"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_centerVertical="true"
        android:background="@drawable/btn_blue"
        android:textStyle="bold"
        android:textColor="#fff"
        android:layout_alignParentRight="true"
        android:textSize="18dp"
        android:layout_marginRight="20dp"/>
</RelativeLayout>